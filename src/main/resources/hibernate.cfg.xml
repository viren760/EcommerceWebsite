<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.jdbc.lob.non_contextual_creation" value="true"/>
        <property name="hibernate.hbm2ddl.autso">update</property>
        <mapping class="com.learn.ecommercewebsite.entities.User"/>
        <mapping class="com.learn.ecommercewebsite.entities.Category"/>
        <mapping class="com.learn.ecommercewebsite.entities.Product"/>
    </session-factory>
</hibernate-configuration>    